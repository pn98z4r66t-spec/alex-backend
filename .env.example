# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DATABASE_URL=sqlite:///alex.db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# AI Configuration
# AI_PROVIDER options: 'ollama', 'lmstudio', 'openai'
AI_PROVIDER=openai
AI_MODEL=gpt-3.5-turbo
AI_TIMEOUT=30
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2048

# OpenAI Configuration (required when AI_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key-here

# Ollama Configuration (required when AI_PROVIDER=ollama)
# AI_API_URL=http://localhost:11434/api/generate
# AI_MODEL=phi3

# LM Studio Configuration (required when AI_PROVIDER=lmstudio)
# AI_API_URL=http://localhost:1234/v1
# AI_MODEL=local-model

# Email Configuration (for task sharing)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Alex Workspace

# File Storage
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=52428800

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

